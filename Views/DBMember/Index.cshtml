@model IEnumerable<_1121754.Models.Members>

@{
    ViewData["Title"] = "使用者資訊";
}

<h1 class="mb-4">使用者資訊</h1>


<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> 新增使用者
    </a>
    <a asp-action="SelectQuery" class="btn btn-primary mb-3">
        <i class="bi bi-search"></i> 查詢
    </a>
</p>

<table class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.BookingId)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Movie)</th>
            <th>@Html.DisplayNameFor(model => model.Time)</th>
            <th>@Html.DisplayNameFor(model => model.Ticket)</th>
            <th>@Html.DisplayNameFor(model => model.Password)</th>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.BookingId</td>
                <td>@item.Name</td>
                <td>@item.Movie</td>
                <td class="text-center">@item.Time</td>
                <td class="text-center">@item.Ticket</td>
                <td>@item.Password</td>
                <td class="text-center">@item.Id</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-sm btn-warning me-1" title="編輯">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-info me-1" title="詳細資料">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-danger" title="刪除" >
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
