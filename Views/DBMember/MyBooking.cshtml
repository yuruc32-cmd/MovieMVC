@model List<_1121754.Models.Members>

@{
    ViewData["Title"] = "我的預約";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center mb-4 text-primary">🎬 我的所有預約</h2>

            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>電影名稱</th>
                            <th>時間場次</th>
                            <th>票數</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Movie</td>
                                <td>@item.Time</td>
                                <td>@item.Ticket</td>
                                <td>
                                    <form asp-action="DeleteBooking" asp-controller="DBMember" asp-route-id="@item.BookingId" method="post" onsubmit="return confirm('確定要刪除這筆預約嗎？');">
                                        <button type="submit" class="btn btn-sm btn-danger">刪除</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    您目前尚未有任何預約。
                </div>
            }
        </div>
    </div>
</div>
