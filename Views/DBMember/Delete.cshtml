@model _1121754.Models.Members

@{
    ViewData["Title"] = "Delete";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">刪除確認</h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger">你確定要刪除這筆資料嗎？</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">帳號</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">電影</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Movie)</dd>

                <dt class="col-sm-3">時間</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Time)</dd>

                <dt class="col-sm-3">張數</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Ticket)</dd>

                <dt class="col-sm-3">密碼</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-3">
                    <input type="submit" value="刪除" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">返回清單</a>
                </div>
            </form>
        </div>
    </div>
</div>
